{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "esNext",
    "esModuleInterop": true,
    "target": "es2022",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "lib": ["es2022"]
}
